<% @page_title = "結果表示" %>
<h1><%= @page_title %></h1>
残り時間↓
<p id="countdown"
    data-time="<%= @message.limit %>"
    data-id="<%= @message.id %>"></p>

<p>本文：<%= @message.message %></p>
<p>制限時間[s]：<%= @message.limit %></p>
<p>開封時間：<%= @message.opendate %></p>
<p>レコード作成時間：<%= @message.created_at %></p>
<p>レコード更新時間：<%= @message.updated_at %></p>

<%= link_to "トップページへ", :controller => "messages", :action => "index" %>
<%= link_to "削除する", @message, method: :delete, confirm: "本当に削除しますか？" %>

